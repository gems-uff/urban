<div class="col-md-12 row" style="margin-bottom: 30px; margin-top: 20px">

  <form role="form" class="form-horizontal" id="form">

    <div class="col-md-3">
      <div class="form-group">
        <label for="line" class="col-sm-5 control-label">Line number</label>

        <div class="col-sm-7">
          <input type="text" class="form-control input-sm" id="line" placeholder="Enter line number">
        </div>
      </div>

      <div class="form-group">
        <label for="show_stops" class="col-sm-5 control-label">Show stops</label>

        <div class="col-sm-7">
          <input id="show_stops" type="checkbox" name="show_stops" data-on-text="YES" data-off-text="NO" checked data-size="small" data-on-color="success" data-off-color="danger">
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label for="weekday-select" class="control-label col-md-4">Weekday</label>

        <div class="col-md-1">
          <input type="radio" name="query-type" value="weekday" class="vcenter" checked="checked">
        </div>

        <div class="col-md-7">
          <%= select_tag :weekday, options_for_select(I18n.t(:'date.day_names').map.with_index { |d, index| [d, index] }),
                         :prompt => 'Select a weekday', :class => 'form-control input-sm', :id => 'weekday-select' %>
        </div>

      </div>
      <div class="form-group">
        <label for="date" class="control-label col-md-4">Date</label>

        <div class="col-md-1">
          <input type="radio" name="query-type" class="vcenter" value="date">
        </div>

        <div class="col-md-7">
          <input type="text" class="datepicker form-control input-sm" id="date-selection" placeholder="Choose a date">
        </div>

      </div>
    </div>

    <div class="col-md-5">
      <div class="form-group">
        <label for="slider" class="control-label col-md-3">Time range</label>

        <div class="col-md-9">
          <div id="slider" class="form-control"></div>
        </div>
      </div>

    </div>

    <input type="hidden" id="time_begin">
    <input type="hidden" id="time_end">
    <input type="hidden" id="date">
    <input type="hidden" id="weekday">
  </form>
</div>


<script>

    $(function () {
        $slider = $("#slider").slider({
            range: true,
            min: 0,
            max: 24,
            values: [ 0, 24 ]
        });

        $slider.slider("pips").slider("float", {});
    });
    $('.datepicker').datepicker();
    $('#date-selection').prop('disabled', true);


    $("input[name=query-type]").change(function () {
        if ($(this).val() == 'weekday') {
            $('#date-selection').prop('disabled', true);
            $('#weekday-select').prop('disabled', false);
        } else if ($(this).val() == 'date') {
            $('#date-selection').prop('disabled', false);
            $('#weekday-select').prop('disabled', true);
        }
    });
</script>